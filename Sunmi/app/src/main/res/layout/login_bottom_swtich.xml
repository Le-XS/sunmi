<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/Tooltip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="270dp"
        android:text="输入密码"
        android:textSize="16sp"
        android:textColor="#39393C" />

    <LinearLayout
        android:id="@+id/inputPsw"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@+id/Tooltip"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:orientation="horizontal">

        <View
            android:id="@+id/pswview1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/input_psw_style" />

        <View
            android:id="@+id/view1"
            android:layout_width="10dp"
            android:layout_height="match_parent" />

        <View
            android:id="@+id/view2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/input_psw_style" />

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent" />

        <View
            android:id="@+id/view3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/input_psw_style" />

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent" />

        <View
            android:id="@+id/view4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/input_psw_style" />

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent" />

        <View
            android:id="@+id/view5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/input_psw_style" />

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent" />

        <View
            android:id="@+id/view6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/input_psw_style" />

    </LinearLayout>

    <Button
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@+id/inputPsw"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:text="登录"
        android:textSize="18sp"
        android:textColor="#FF6B6A70"
        android:background="@drawable/buttonstyle"/>

    <TextView
        android:id="@+id/ForgotPsw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="152dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="152dp"
        android:gravity="center"
        android:text="忘记密码"
        android:textColor="#FFFF7D41"
        android:textSize="16sp" />


</RelativeLayout>