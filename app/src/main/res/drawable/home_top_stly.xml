<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    //第一组item 圆角边框。
    <item>
        <shape>
            <stroke
                android:width="1dp"	android:color="@color/white" />		//边框线颜色
            <corners android:radius="16dp" />		//圆角度数
            <solid android:color="@color/white" >		//背景颜色
            </solid>
            <padding android:right="10dp" />  //边距
        </shape>
    </item>
    //第二组item 插入图片(替换spinner默认箭头)
    <item>
        <bitmap
            android:gravity="right"
            android:src="@drawable/xiala"
            />
    </item>
</layer-list>