<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/Tooltip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="200dp"
        android:text="获取验证码"
        android:textSize="16sp"
        android:textColor="#FFFF7D41" />

    <LinearLayout
        android:id="@+id/inputPsw"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@+id/Tooltip"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/pswview1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:inputType="number"
            android:maxLength="1"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@drawable/input_psw_style" />

        <View
            android:layout_width="40dp"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/view2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:inputType="number"
            android:maxLength="1"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@drawable/input_psw_style" />

        <View
            android:layout_width="40dp"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/view3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:inputType="number"
            android:maxLength="1"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@drawable/input_psw_style" />

        <View
            android:layout_width="40dp"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/view4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:inputType="number"
            android:maxLength="1"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@drawable/input_psw_style" />

    </LinearLayout>

    <Button
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@+id/inputPsw"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:text="登录"
        android:textSize="18sp"
        android:textColor="#FF6B6A70"
        android:background="@drawable/buttonstyle"/>

</RelativeLayout>